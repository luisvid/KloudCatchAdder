{
	// Required
	"name": "KloudCatch Adder",
	"version": "0.2",
	"manifest_version": 2,
	
	// Recommended
	"description": "Add content to your KloudCatch acount",

	"icons": {
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},	

	  "background": {
		"page": "background.html"
	},
	
	"options_page": "options.html",

	//"page_action": {
	"browser_action": {
		"default_title": "Add to KloudCatch",
		"default_icon": "img/icon16.png",
		"default_popup": "popup.html"
	},

	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*"
	]
}